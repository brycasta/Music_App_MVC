<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header" style="background-color: #795AAC;">
            <h5 class="text-white mb-0" style="font-family: 'Poppins', sans-serif;">
                <i class="bi bi-music-note-list me-2"></i>Add New Playlist
            </h5>
        </div>
        <div class="card-body p-4">
            <form action="InsertAPlaylist" method="post">
                <div class="mb-3">
                    <label for="playlistName" class="form-label fw-semibold" style="font-family: 'Poppins', sans-serif;">
                        <i class="bi bi-disc me-2"></i>Playlist Name
                    </label>
                    <input type="text"
                           class="form-control"
                           id="playlistName"
                           name="playlistName"
                           placeholder="Enter playlist name"
                           style="border-color: #e0e0e0;">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label fw-semibold" style="font-family: 'Poppins', sans-serif;">
                        <i class="bi bi-card-text me-2"></i>Description
                    </label>
                    <input type="text"
                           class="form-control"
                           id="description"
                           name="description"
                           placeholder="Enter playlist description"
                           style="border-color: #e0e0e0;">
                </div>
                <div class="mb-4">
                    <label for="createdDate" class="form-label fw-semibold" style="font-family: 'Poppins', sans-serif;">
                        <i class="bi bi-calendar me-2"></i>Created Date
                    </label>
                    <input type="datetime-local"
                           class="form-control"
                           id="createdDate"
                           name="createdDate"
                           style="border-color: #e0e0e0;">
                </div>
                <div class="d-flex gap-2">
                    <button type="submit"
                            class="btn"
                            style="background-color: #795AAC; color: white;">
                        <i class="bi bi-check-circle me-2"></i>Submit
                    </button>
                    <button type="reset"
                            class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>