@using Music_App.Models
@{
    //done by Bryan Castaneda
}

<style>
    body {
        
        background: linear-gradient(135deg, #2e1a47 0%, #1b122f 100%);
        min-height: 100vh;
        margin: 0;
        background-attachment: fixed;
    }
</style>


<div class="container mt-4">
    <div class="p-3 text-white shadow-sm" style="background-color: #795AAC !important; border-radius: 6px;">
        <div class="d-flex align-items-center">
            <i class="bi bi-music-note-beamed me-2 fs-4"></i>
            <h2 class="mb-0" style="font-family: 'Poppins', sans-serif;">Playlists</h2>
        </div>
    </div>

    <br />
    <br />


    <div class="mt-3 text-center">
        <a href="InsertAPlaylistForm" class="btn btn-primary" style="background-color: #795AAC; border-color: #795AAC;">
            <i class="bi bi-plus-circle me-2"></i>Create New Playlist
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        @foreach (var playlist in ViewBag.Playlists)
        {
            <div class="col">
                <div class="card h-100 shadow-sm" style="border-color: #795AAC;">
                    <div class="card-header" style="background-color: #795AAC; color: white;">
                        <h5 class="card-title mb-0" style="font-family: 'Poppins', sans-serif;">
                            <i class="bi bi-disc me-2"></i>@playlist.PlaylistName
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Description:</strong> @playlist.Description
                        </p>
                        <p class="card-text text-muted">
                            <i class="bi bi-calendar me-2"></i>Created: @playlist.CreatedDate.ToShortDateString()
                        </p>
                    </div>
                    <div class="card-footer bg-transparent d-flex justify-content-between">
                        <a href="UpdateAPlaylistForm?aPlaylistId=@playlist.PlaylistId"
                           class="btn btn-sm"
                           style="background-color: #795AAC; color: white;">
                            <i class="bi bi-pencil-square me-1"></i>Update
                        </a>
             
                    </div>
                </div>
            </div>
        }
    </div>

   
</div>