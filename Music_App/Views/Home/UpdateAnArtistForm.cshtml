<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header" style="background-color: #795AAC;">
            <h5 class="text-white mb-0" style="font-family: 'Poppins', sans-serif;">
                <i class="bi bi-pencil-square me-2"></i>Update Artist
    
            </h5>
        </div>
        <div class="card-body p-4">
            <form action="UpdateAnArtist" method="post">
                <input type="hidden" name="artistId" value="@ViewBag.Artists[0].ArtistId" />

                <div class="mb-3">
                    <label for="artistName" class="form-label fw-semibold" style="font-family: 'Poppins', sans-serif;">
                        <i class="bi bi-person-circle me-2"></i>Artist Name
                    </label>
                    <input type="text"
                           class="form-control"
                           id="artistName"
                           name="artistName"
                           value="@ViewBag.Artists[0].ArtistName"
                           style="border-color: #e0e0e0;">
                </div>

                <div class="mb-4">
                    <label for="description" class="form-label fw-semibold" style="font-family: 'Poppins', sans-serif;">
                        <i class="bi bi-card-text me-2"></i>Description
                    </label>
                    <input type="text"
                           class="form-control"
                           id="description"
                           name="description"
                           value="@ViewBag.Artists[0].Description"
                           style="border-color: #e0e0e0;">
                </div>

                <div class="d-flex gap-2">
                    <button type="submit"
                            class="btn"
                            style="background-color: #795AAC; color: white;">
                        <i class="bi bi-check-circle me-2"></i>Update
                    </button>
                    <button type="reset"
                            class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
