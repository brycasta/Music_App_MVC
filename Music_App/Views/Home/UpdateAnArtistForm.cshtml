<h5>Artist Id: @ViewBag.Artists[0].ArtistId</h5>

<form action="UpdateAnArtist" method="post">
    <input type="hidden" name="artistId" value="@ViewBag.Artists[0].ArtistId" />

    Artist Name<br />
    <input type="text" name="artistName" value="@ViewBag.Artists[0].ArtistName" /><br /><br />

    Description<br />
    <input type="text" name="description" value="@ViewBag.Artists[0].Description" /><br /><br />

    <input type="submit" />
    <input type="reset" />
</form>
